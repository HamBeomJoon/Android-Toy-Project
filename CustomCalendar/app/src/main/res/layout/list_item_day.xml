<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_day_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <ImageView
        android:id="@+id/iv_potion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/potion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_day_layout" />

    <TextView
        android:id="@+id/tv_day_exp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_potion"
        app:layout_constraintEnd_toEndOf="@id/iv_potion"
        app:layout_constraintStart_toStartOf="@id/iv_potion"
        app:layout_constraintTop_toTopOf="@id/iv_potion" />

    <TextView
        android:id="@+id/item_day_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@id/iv_potion"
        app:layout_constraintStart_toStartOf="@id/iv_potion"
        app:layout_constraintTop_toBottomOf="@id/iv_potion" />

</androidx.constraintlayout.widget.ConstraintLayout>